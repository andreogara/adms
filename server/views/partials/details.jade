section(class="artistinfo")
	div(class = "artist cf" ng-controller="DetailsController")
		a(href="/details?id={{prevItem}}" class = "btn btn-left") &lt;
		a(href="/details?id={{nextItem}}" class = "btn btn-right") &gt;
		h1 {{artists[whichItem].name}}
		div(class="info")
		h3 {{artists[whichItem].reknown}}
		img(ng-src="images/{{artists[whichItem].shortname}}_tn.jpg" alt="Photo of {{artists[whichItem].name}}")
		div(class="bio") {{artists[whichItem].bio}}
	a(href="/") &laquo; Back to Home

